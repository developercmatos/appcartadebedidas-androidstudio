<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.EmpresaActivity">

    <ImageView
        android:id="@+id/ic_empresa_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_empresa" />

    <ImageView
        android:id="@+id/ic_empresa_2"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ic_empresa_1"
        android:layout_marginTop="66dp"
        android:background="@drawable/ic_email" />

    <ImageView
        android:id="@+id/ic_empresa_3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="125dp"
        android:layout_toStartOf="@+id/empresaId"
        android:background="@drawable/ic_contato" />

    <TextView
        android:id="@+id/empresaId"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:text="The Best Restaurant"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/emailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ic_empresa_2"
        android:layout_marginStart="63dp"
        android:paddingTop="5dp"
        android:text="restaurant@restaurant.com.br"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/contatoId"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailId"
        android:layout_alignTop="@+id/ic_empresa_3"
        android:paddingTop="5dp"
        android:text="+55(81)99880-7827"
        android:textSize="20dp" />




    <LinearLayout
        android:id="@+id/main_Layout"
        android:layout_width="300dp"
        android:layout_height="237dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="184dp">


    </LinearLayout>

    <Button
        android:id="@+id/btnmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/main_Layout"
        android:layout_alignParentTop="true"
        android:layout_marginTop="193dp"
        android:text="Mostrar Mapa" />


</RelativeLayout>